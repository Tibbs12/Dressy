<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_bg_01"
    tools:context=".selectCloset">

    <!--use intent to get user input from previous screen-->

    <!--placeholder for search bar must be done in java-->

    <ImageButton
        android:id="@+id/closetAddOutfits"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="174dp"
        android:layout_marginBottom="168dp"
        android:contentDescription="@string/add_button"
        app:layout_constraintBottom_toBottomOf="@+id/outfitsGrid"
        app:layout_constraintStart_toEndOf="@+id/outfitsHeader"
        app:layout_constraintTop_toTopOf="@+id/itemsGrid"
        app:srcCompat="@drawable/ic_add"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/closetNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="@string/closet_hint"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/access_buttons"
        app:layout_constraintBottom_toTopOf="@+id/closetAddItems"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closetNameInput" />

    <TextView
        android:id="@+id/itemsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="7dp"
        android:text="@string/my_items"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/closetAddItems"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/itemsGrid"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="79dp"
        android:background="@drawable/grid_border"
        android:numColumns="4"
        app:layout_constraintBottom_toTopOf="@+id/outfitsGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <GridLayout
        android:id="@+id/outfitsGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/grid_border"
        android:numColumns="4"
        app:layout_constraintBottom_toTopOf="@+id/closetFwdBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outfitsHeader" />

    <ImageButton
        android:id="@+id/closetAddItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="72dp"
        android:contentDescription="@string/add_button"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/itemsHeader"
        app:layout_constraintTop_toBottomOf="@+id/closetNameInput"
        app:srcCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/outfitsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:layout_marginBottom="235dp"
        android:text="@string/outfits"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/closetFwdBtn"
        app:layout_constraintStart_toStartOf="@+id/outfitsGrid"
        app:layout_constraintTop_toTopOf="@+id/itemsHeader" />

    <ImageButton
        android:id="@+id/closetFwdBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:contentDescription="@string/fwd_arrow"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/outfitsGrid"
        app:srcCompat="@drawable/ic_arrow_forward" />

    <ImageButton
        android:id="@+id/closetBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:contentDescription="@string/back_arrow"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />


</androidx.constraintlayout.widget.ConstraintLayout>